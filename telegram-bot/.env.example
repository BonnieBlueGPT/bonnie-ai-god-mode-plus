# Complete configuration template for Render deployment

# TELEGRAM BOT TOKEN (REQUIRED)
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OPENAI/OPENROUTER API KEY (REQUIRED) 
# For GPT brain integration
OPENROUTER_API_KEY=your_openrouter_key_here

# SUPABASE DATABASE (REQUIRED)
# Database for memory storage and user management
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# WEBHOOK CONFIGURATION (RENDER DEPLOYMENT)
# Leave empty for polling mode, set for webhook mode on Render
WEBHOOK_URL=https://your-app-name.onrender.com

# RENDER DEPLOYMENT SETTINGS
PORT=10000
PYTHON_VERSION=3.11.9

# STRIPE MONETIZATION (OPTIONAL)
# For voice upgrade and premium features
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# OPTIONAL: Database table prefixes
TELEGRAM_USERS_TABLE=telegram_users
TELEGRAM_INTERACTIONS_TABLE=telegram_interactions

# OPTIONAL: Debug and logging
DEBUG_MODE=false
LOG_LEVEL=INFO